<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('layouts/main', { title: 'Blog' }) %>
    <div class="container mt-4">
        <h1>Welcome to the Blog!</h1>
        <% articles.forEach(article => { %>
            <div class="card mt-4">
                <img src="<%= article.imageUrl %>" class="card-img-top" alt="Article Image">
                <div class="card-body">
                    <h5 class="card-title"><%= article.title %></h5>
                    <p class="card-text"><%= article.content.substring(0, 150) %>...</p>
                    <a href="/article/<%= article._id %>" class="btn btn-primary">Read More</a>
                </div>
                <div class="card-footer text-muted">
                    <%= article.timestamp %>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>
